                 <span class="first-word">
                   {{ new_word }}
                 </span>
                 <span class="last-word">
                   {{ new_word1 }}
                 </span>
               </h3>
               {% else %}
               <h3>
                 <span>{{ block.settings.title }}</span>
               </h3>
               {% endif %}
               
               
			</div>
	   <div class="inner">		
          <img  class="lazyload" data-sizes="auto" data-src="{{ block.settings.image | img_url: image_size }}">    
